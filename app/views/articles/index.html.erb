<h2>A PostgreSQL Full Text Search example</h2>
<%= link_to 'New Article', new_article_path %>
<br><br>

<%= form_tag search_articles_path, :method => :get, :remote => true do %>
  <fieldset>
    <h3>Search for an article</h3>

    <div class="input">
      <%= label_tag :search, "Search terms" %>
      <%= text_field_tag :search, params[:search] %>
      <br>
      <%= check_box_tag :use_highlights, '1', params[:use_highlights] %>
      <%= label :use_highlights, 'HTML Highlight results' %>
      <br><br>
      <%= submit_tag "Search" %>
    </div>
  </fieldset>
<% end %>

<div id="search_results">
  <% if @articles.any? %>
    <%= render @articles %>
  <% else %>
    <p>
      Oh dear. Your search matched nothing in the database, or there there is simply
      nothing in the database.
    </p>
  <% end %>
</div>